// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("app.db")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  slug  String @unique
  title String
  body  String
  categories Category[]

  @@map("posts")
}

model User {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  email       String     @unique
  firstName   String
  lastName    String
  phoneNumber String
  role        String     @default("USER")
  password    String
  categories  Category[]

  @@map("users")
}

model Category {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  name   String  @unique 
  user   User?   @relation(fields: [userId], references: [id])
  userId String? @db.ObjectId

  post Post? @relation(fields: [postId], references: [id])
  postId String? @db.ObjectId

  @@map("categories")
}
